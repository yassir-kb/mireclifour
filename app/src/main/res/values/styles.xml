<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="logout">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowMinWidthMajor">82%</item>
        <item name="android:windowMinWidthMinor">82%</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="EditTextstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/_1sdp</item>-->
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>

    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/material_place_holder</item>
        <item name="android:textSize">@dimen/_10sdp</item>

        <item name="colorControlNormal">@color/material_place_holder</item>

        //added attributes
        <item name="colorControlActivated">@color/material_place_holder</item>
        <item name="colorControlHighlight">@color/material_place_holder</item>

    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="CustomButtonStyle">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_margin">@dimen/_7sdp</item>
        <item name="android:background">@color/logobackground</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/oswaldbold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white1</item>

    </style>
    <style
        name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/popup_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:dropDownHorizontalOffset">-50dp</item>
        <item name="android:dropDownVerticalOffset">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="mainheader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/text_logo</item>
    </style>

</resources>
