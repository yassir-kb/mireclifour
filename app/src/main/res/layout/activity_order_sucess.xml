<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecommerce.activity.OrderSucessActivity">

    <ImageView
        android:id="@+id/order_face"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/smiley" />

    <TextView
        android:id="@+id/order_sucess_txt1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <View
        android:id="@+id/vertical_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/gray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_sucess_txt2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_sucess_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="top|center"
        android:layout_weight="0.3"
        android:gravity="center|top"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end">


        <Button
            android:id="@+id/sucess_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logobackground"
            android:fontFamily="@font/oswaldbold"
            android:text="@string/thank_you"
            android:textAllCaps="false"
            android:textColor="@color/white1" />
    </LinearLayout>

</LinearLayout>

